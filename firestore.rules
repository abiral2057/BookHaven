rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read/write access for products, categories, and customers for the admin panel.
    match /products/{productId} {
      allow read, write: if true;
    }

    match /categories/{categoryId} {
      allow read, write: if true;
    }

    match /customers/{customerId} {
      allow read, write: if true;
    }
    
    // Secure the orders collection.
    match /orders/{orderId} {
      // Allow users to create new orders.
      allow create: if request.auth != null;
      // Allow users to read their own orders. The query is also secured by a rule.
      allow read: if request.auth.uid == resource.data.userId;
      // Allow specific queries for a user's own orders.
      allow list: if request.auth.uid == request.query.where.userId;
    }

    // Allow authenticated users to perform a test write for connection checking.
    match /_test_writes/{userId} {
      allow write: if request.auth.uid == userId;
    }
  }
}
