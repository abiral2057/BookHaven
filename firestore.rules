rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow public read for products and categories
    match /products/{productId} {
      allow read: if true;
      allow write: if false; // Only admin SDK should write products
    }
    
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if false; // Only admin SDK should write categories
    }
    
    // Allow anyone to read customer list for now
    match /customers/{customerId} {
        allow read: if true;
        allow write: if request.auth != null; // Allow logged in users to create customer entries via orders
    }

    // Order Rules
    match /orders/{orderId} {
      // Allow a user to read their own order documents
      allow read: if request.auth.uid == resource.data.userId;
      
      // Allow any authenticated user to create an order
      // Allow any authenticated user to list orders, but the 'read' rule above will
      // ensure they can only access the content of their own orders.
      allow list, create: if request.auth != null;

      // Allow admin to update/delete (to be implemented with admin SDK later)
      allow update, delete: if false;
    }
  }
}